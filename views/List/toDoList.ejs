<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <style>
      .column1{
    border: 2px solid rebeccapurple;
    background-color: rgb(196, 189, 189);
      }
      .column2{
          border: 2px solid rgb(24, 240, 24);
          background-color: rgb(196, 189, 189);
      }
      .column3{
          border: 2px solid rgb(47, 3, 92);
          background-color: rgb(196, 189, 189);
      }

      .content, .doing, .done{
          background-color: white;
          margin: 4px;
      }
      .parent{
        margin: 10px;
      }


    </style>
  </head>
<body>
    <div class="container">
        <div class="row d-flex  justify-content-center">
            <div class="col-12 col-sm-4 column1">
                <h2>TO DO</h2>
                <form action="/routes" method="post" >
                  <input name ="content" type="text" placeholder="Nội dung kế hoạch...">
                  <input name ="status" type="hidden" value="toDo">
                  <button>Tạo mới</button>
              </form>
                <p>...Thêm kế hoạch</p>
               <div class="content ">
                <%for (const element of listData) { %>
                  <div>
                        <%if(element.status === 'toDo'){%>
                        <p><%=element.content %></p>
                          <input type="hidden" value="<%=element.id %>">
                          <div class="d-flex">
                            <button class="fixContent">Sửa</button>
                            <form action="/routes/delete/<%=element.id %>" method="POST" >
                                <button>Xoá</button>
                            </form>
                            <form action="/routes/moveToDoing/<%=element.id %>" method="POST" >
                                <button>Chuyển</button>
                            </form>
                        </div>
                        <%}%>
                  </div>  
               <% } %>
               </div>
                
              </div>
              <div class="col-12 col-sm-4 column2">
                <h2>DOING</h2>
                <div class="doing">
                  <%for (const element of listData) { %>
                    <div>
                          <%if(element.status === 'doing'){%>
                          <p><%=element.content %></p>
                            <input type="hidden" value="<%=element.id %>">
                            <div class="d-flex">
                              <button class="fixContent">Sửa</button>
                              <form action="/routes/delete/<%=element.id %>" method="POST" >
                                  <button>Xoá</button>
                              </form>
                              <form action="/routes/moveToDone/<%=element.id %>" method="POST" >
                                  <button>Chuyển</button>
                              </form>
                          </div>
                          <%}%>
                    </div>  
                 <% } %>
                </div>
              </div>
              <div class="col-12 col-sm-4 column3">
                <h2>DONE</h2>
                <div class="done">
                  <%for (const element of listData) { %>
                    <div>
                          <%if(element.status === 'done'){%>
                          <p><%=element.content %></p>
                            <input type="hidden" value="<%=element.id %>">
                            <div class="d-flex">
                              <button class="fixContent">Sửa</button>
                              <form action="/routes/delete/<%=element.id %>" method="POST" >
                                  <button>Xoá</button>
                              </form>
                              <form action="/routes/moveToDone/<%=element.id %>" method="POST" >
                                <input type="hidden" value="123">
                              </form>
                          </div>
                          <%}%>
                    </div>  
                 <% } %>
                </div>
              </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script> 
    <script src="/toDoListFunction.js "></script>

</body>
</html>